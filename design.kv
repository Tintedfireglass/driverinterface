<CarDashboard>:
    Speedometer:
        id: speedometer
        text: str(root.accelerator_pedal) + '%'
        font_size: 80
        size_hint: None, None
        size: 300, 300
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Label:
        text: 'State of Charge (SOC): ' + str(root.soc) + '%'
        font_size: 25
        size_hint: None, None
        size: root.width / 2, root.height / 2
        pos_hint: {"left": 0.9, "top": 0.9}
        halign: 'center'
        valign: 'middle'

    Label:
        text: 'Cell Temperature: ' + str(root.cell_temperature) + 'Â°C'
        font_size: 25
        size_hint: None, None
        size: root.width / 2, root.height / 2
        pos_hint: {"right": 0.9, "top": 0.9}
        halign: 'center'
        valign: 'middle'

    Label:
        text: 'Time: ' + root.current_time
        font_size: 25
        size_hint: None, None
        size: root.width / 2, root.height / 2
        pos_hint: {"left": 0.9, "bottom": 0.9}
        halign: 'center'
        valign: 'middle'

    Label:
        text: 'OJAS'
        font_size: 25
        size_hint: None, None
        size: root.width / 2, root.height / 2
        pos_hint: {"right": 0.9, "bottom": 0.9}
        halign: 'center'
        valign: 'middle'

<Speedometer>:
    canvas:
        Color:
            rgba: 0, 0.7, 1, 1
        Line:
            circle: self.center_x, self.center_y, min(self.width, self.height) / 2 - 1
            width: 2
        Color:
            rgba: 1, 0.2, 0, 1
        Line:
            points: [self.center_x, self.center_y,self.center_x + (min(self.width, self.height) / 2 - 1) * 0.8 * cos((root.value - 90) * pi / 180),self.center_y + (min(self.width, self.height) / 2 - 1) * 0.8 * sin((root.value - 90) * pi / 180)]
            width: 2

    Label:
        text: str(int(root.movement))
        pos: root.center_x - 10, root.center_y - 30
        font_size: 20
