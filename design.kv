<CarDashboard>:

    
    GridLayout:
        cols: 1
        rows: 1
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        
        
        Label:
            text: str(root.accelerator_pedal) + '%'
            font_size: 60
            size_hint_y: None
            height: self.parent.height
            halign: 'center'
            valign: 'middle'
    
    GridLayout:
        cols: 1
        rows: 1
        size_hint: None, None
        width: root.width / 2
        height: root.height / 2
        pos_hint: {"left": 1, "top": 1}
        
        Label:
            text: 'State of Charge (SOC): ' + str(root.soc) + '%'
            font_size: 25
            size_hint_y: None
            height: 0.9*self.texture_size[1]
            halign: 'center'
            valign: 'middle'
    
    GridLayout:
        cols: 1
        rows: 1
        size_hint: None, None
        width: root.width / 2
        height: root.height / 2
        pos_hint: {"right": 1, "top": 1}
        
        Label:
            text: 'Cell Temperature: ' + str(root.cell_temperature) + 'Â°C'
            font_size: 25
            size_hint_y: None
            height: 0.9*self.texture_size[1]
            halign: 'center'
            valign: 'middle'
    
    GridLayout:
        cols: 1
        rows: 1
        size_hint: None, None
        width: root.width / 2
        height: root.height / 2
        pos_hint: {"left": 1, "bottom": 1}
        
        Label:
            text: 'Time: ' + root.current_time
            font_size: 25
            size_hint_y: None
            height: 0.9*root.height
            halign: 'center'
            valign: 'middle'
    
    GridLayout:
        cols: 1
        rows: 1
        size_hint: None, None
        width: root.width / 2
        height: root.height / 2
        pos_hint: {"right": 1, "bottom": 1}
        
        Label:
            text: "OJAS"
            font_size: 25
            size_hint_y: None
            height: 0.9*root.height

            halign: 'center'
            valign: 'bottom'
